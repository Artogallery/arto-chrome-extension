{
  "version": "1.0.0",
  "name": "ARTO Gallery",
  "manifest_version": 2,
  "description": "ARTO Gallery Chrome Extension",
  "browser_action": {
    "default_title": "ARTO Gallery Chrome Extension",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [ "tabs", "storage",  "https://app.arto.gallery/*" ],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:; connect-src https://app.arto.gallery",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
}
